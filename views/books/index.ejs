<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 50px;">

    <% if(messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error%></div>
    <% } %>
    <% if(messages.success) { %>
        <div class="alert alert-success" role="alert"><%= messages.success%></div>
    <% } %>

    <div class="card">
        <div class="card-hearder">
            <ul class="nav nav-pills w-100">
                <li class="nav-link">Books</li>
                <li class="nav-link ml-auto">
                    <a href="/books/add" class="nav-link active">Add Books</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th width="200px">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < data.length; i++) { %>
                            <tr>
                                <th scope="row"><%= data[i].product_ID %></th>
                                <td><%= data[i].product_name %></td>
                                <td><%= data[i].category_type %></td>
                                <td>
                                    <a href="../books/edit/<%= data[i].product_ID %>" class="btn btn-success edit">Edit</a>
                                    <a href="../books/delete/<%= data[i].product_ID %>" onclick="return alert('Are you sure?')" class="btn btn-danger delete">Delete</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            <% } %>

            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No book found!</p>
            <% } %>

        </div>
    </div>

</body>
</html>