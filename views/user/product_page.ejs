<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/451145afdd.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/Home.css">
    <link rel="stylesheet" href="css/Product-page.css">
</head>
<body>

<%- include('../templates/nav-bar-user') %>

<div class="containers wraper" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="row top-contact">
        <div class="col-sm-6 col-lg-6 center">        
            <div class="Product-img">             
                <img id="product-image" src="/Assets/one-punce01.jpg" alt="" width="600px" height="600px">          
            </div>
        </div>

        <div class="col-sm-6 col-lg-6 ">
            <div class="Product-info">
                <h4 id="product-title">one-punce man 01</h4>
                <h4 id="product-item">item #001</h4>
                <p><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i></p>
                <div class="products-price">
                    <div class="discount">
                        <p><i class="fa-solid fa-baht-sign"></i>50</p>
                    </div>
                    <div class="original">
                        <p><span class="line-discount"><i class="fa-solid fa-baht-sign "></i>100</span></p>
                    </div>
                </div>
                <h4>Availability : <span id="product-availability">yes</span></h4>
            </div>

            <div class="d-flex">
                <div>
                    <div class="dropdown-center"> 
                        <input class="btn btn-secondary" type="number" name="numberQuantity" id="product-quantity" placeholder="Quantity:">                       
                    </div>
                </div>
                <div class="ms-5">
                    <button class="btn btn-secondary" type="submit" id="add-to-cart-btn">Add to cart</button>
                </div>
            </div>
        </div>             
    </div>

    <div class="flashsale mt-5">
        <div class="d-flex flex-column flex-lg-row center">
            <h2 class="filterflashsale-title">Description</h2>                
        </div> 
    </div>

    <div class="row top-contact">
        <p id="product-description">Loading description...</p>
    </div>
    
    <div class="flashsale mt-5">
        <div class="d-flex flex-column flex-lg-row center">
            <h2 class="filterflashsale-title">Details</h2>                
        </div> 
    </div>

    <div class="row top-contact">
        <table>
            <tr>
                <th>Title</th>
                <td id="product-name">Name</td>
            </tr>
            <tr>
                <th>Author</th>
                <td id="product-author">Mr.One , Mr.Yusuke Murata</td>
            </tr>
            <tr>
                <th>Publication Date</th>
                <td id="product-publication-date">May , 2023</td>
            </tr>
            <tr>
                <th>Category</th>
                <td id="product-category">Comics</td>
            </tr>
        </table>
    </div>
</div>

<%- include('../templates/user-footer') %>

<script src="js/home.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

<script>
    document.addEventListener('DOMContentLoaded', async function () {
        try {
            // Fetch book data from the server
            const response = await fetch('/api/book/:bookId'); // Replace ':bookId' with the actual ID of the book
            const bookData = await response.json();

            // Update DOM elements with fetched data
            document.getElementById('product-image').src = bookData.image;
            document.getElementById('product-title').innerText = bookData.title;
            document.getElementById('product-item').innerText = bookData.itemNumber;
            document.getElementById('product-description').innerText = bookData.description;
            document.getElementById('product-availability').innerText = bookData.availability;
            document.getElementById('product-name').innerText = bookData.name;
            document.getElementById('product-author').innerText = bookData.author;
            document.getElementById('product-publication-date').innerText = bookData.publicationDate;
            document.getElementById('product-category').innerText = bookData.category;
        } catch (error) {
            console.error('Error fetching book data:', error);
        }
    });
</script>

</body>
</html>
